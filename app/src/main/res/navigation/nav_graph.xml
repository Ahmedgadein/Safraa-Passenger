<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/landingPageFragment">

    <fragment
        android:id="@+id/landingPageFragment"
        android:name="com.dinder.rihla.rider.ui.landing.LandingPageFragment"
        android:label="landing_page_fragment"
        tools:layout="@layout/landing_page_fragment">
        <action
            android:id="@+id/action_landingPageFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_landingPageFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.dinder.rihla.rider.ui.login.LoginFragment"
        android:label="login_fragment"
        tools:layout="@layout/login_fragment">
        <action
            android:id="@+id/action_loginFragment_to_verificationFragment"
            app:destination="@id/verificationFragment" />
    </fragment>
    <fragment
        android:id="@+id/verificationFragment"
        android:name="com.dinder.rihla.rider.ui.verification.VerificationFragment"
        android:label="VerificationFragment">
        <argument
            android:name="phoneNumber"
            app:argType="string" />
        <action
            android:id="@+id/action_verificationFragment_to_signupFragment"
            app:destination="@id/signupFragment" />
        <action
            android:id="@+id/action_verificationFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/signupFragment"
        android:name="com.dinder.rihla.rider.ui.signup.SignupFragment"
        android:label="signup_fragment"
        tools:layout="@layout/signup_fragment">
        <argument
            android:name="phoneNumber"
            app:argType="string" />
        <action
            android:id="@+id/action_signupFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.dinder.rihla.rider.ui.home.HomeFragment"
        android:label="home_fragment"
        tools:layout="@layout/home_fragment" >
        <action
            android:id="@+id/action_homeFragment_to_tripDetailFragment"
            app:destination="@id/tripDetailFragment" />
        <action
            android:id="@+id/action_homeFragment_to_ticketDetail"
            app:destination="@id/ticketDetail" />
    </fragment>
    <fragment
        android:id="@+id/tripDetailFragment"
        android:name="com.dinder.rihla.rider.ui.trip_detail.TripDetailFragment"
        android:label="trip_detail_fragment"
        tools:layout="@layout/trip_detail_fragment" >
        <argument
            android:name="tripID"
            app:argType="long" />
    </fragment>
    <fragment
        android:id="@+id/ticketDetail"
        android:name="com.dinder.rihla.rider.ui.ticket_detail.TicketDetailFragment"
        android:label="ticket_detail_fragment"
        tools:layout="@layout/ticket_detail_fragment" >
        <argument
            android:name="ticketId"
            app:argType="string" />
    </fragment>

</navigation>