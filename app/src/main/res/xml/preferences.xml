<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto"
    app:isPreferenceVisible="false">

    <PreferenceCategory
        app:allowDividerBelow="true"
        app:key="personal"
        app:title="@string/personal_info">

        <Preference
            app:defaultValue="NA"
            app:key="name"
            app:title="@string/name" />

        <Preference
            app:defaultValue="NA"
            app:key="phone"
            app:title="@string/mobile_number" />

    </PreferenceCategory>

    <PreferenceCategory
        app:allowDividerBelow="true"
        app:key="referral">

        <Preference
            app:icon="@drawable/ic_share"
            app:key="invite"
            app:summary="@string/invite_a_friend_info"
            app:title="@string/invite_a_friend" />

        <Preference
            app:defaultValue="NA"
            app:icon="@drawable/ic_points"
            app:isPreferenceVisible="false"
            app:key="points"
            app:title="@string/points" />
    </PreferenceCategory>

    <PreferenceCategory app:key="settings">
        <Preference
            app:defaultValue="en"
            app:icon="@drawable/ic_language"
            app:key="language"
            app:title="@string/language" />

        <SwitchPreference
            app:defaultValue="false"
            app:icon="@drawable/ic_night_mode"
            app:key="night_mode"
            app:title="@string/night_mode" />

        <Preference
            app:icon="@drawable/ic_terms_and_conditions"
            app:key="terms_and_conditions"
            app:title="@string/terms_and_conditions_label" />

        <Preference
            app:icon="@drawable/ic_agent"
            app:key="contact_us"
            app:title="@string/contact_us" />

        <Preference
            app:icon="@drawable/ic_facebook"
            app:key="social_media"
            app:title="@string/social_media" />
    </PreferenceCategory>
</PreferenceScreen>